<mt:Ignore>
# =======================
# 
# モジュール-記事新着-headline-小
# 
# vars:
#   __recent_title_tag__
#   __recent_title_text__(require)
#   __recent_layout__
# 
# =======================
</mt:Ignore>
<mt:Unless name="__recent_title_tag__">
    <mt:SetVar name="__recent_title_tag__" value="h2" />
</mt:Unless>
<mt:Unless name="__recent_layout__">
    <mt:SetVar name="__recent_layout__" value="1カラム" />
</mt:Unless>

<mt:Entries sort_by="authored_on" sort_order="descend" limit="5">
<mt:EntriesHeader>
<section class="echo-p-widget echo-p-widget-sm echo-p-widget-headline echo-p-widget-recent">
    <div class="echo-p-widget-header">
        <<mt:Var name="__recent_title_tag__" /> class="echo-p-widget-title"><mt:Var name="__recent_title_text__" /></<mt:Var name="__recent_title_tag__" />>
    </div><!-- /.echo-p-widget-header -->

    <div class="echo-p-widget-contents">
</mt:EntriesHeader>

        <div class="echo-c-headline echo-c-headline-entry">
            <a href="<mt:EntryPermalink />" class="echo-c-headline-inner">
                <time class="echo-c-headline-header" datetime="<mt:EntryDate format_name="iso8601" />"><mt:EntryDate language="en" format="$__blog_entry_date__" /></time>

                <mt:EntryCategories type="primary">
                <p class="echo-c-headline-category">
                    <span class="echo-m-label echo-m-label-<mt:CategoryBasename separator="bar" />"><mt:CategoryLabel encode_html="1" /></span>
                </p>
                </mt:EntryCategories>

                <h3 class="echo-c-headline-title"><mt:EntryTitle encode_html="1" /></h3>
            </a><!-- /.echo-c-headline-inner -->
        </div><!-- /.echo-c-headline -->

<mt:EntriesFooter>
    </div><!-- /.echo-p-widget-contents -->

</section><!-- /.echo-p-widget -->
</mt:EntriesFooter>
</mt:Entries>
