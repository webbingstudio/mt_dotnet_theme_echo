<mt:Ignore>
# =======================
# 
# カスタムブロック-ページ誘導-flip
# 
# vars:
#   __page_pid__
#   __page_class__
#   __page_tagname__
# 
# =======================
</mt:Ignore>
<mt:Pages id="$__page_pid__" limit="1">
<mt:PagesHeader>
<section class="echo-mt-be-flip echo-mt-be-block-custom">
</mt:PagesHeader>
    <div class="echo-c-flip echo-c-flip-half<mt:Var name="__page_class__" />">

        <mt:If tag="CustomFieldValue" identifier="EchoPageEyecatch">
            <mt:CustomFieldAsset identifier="EchoPageEyecatch">
                <div class="echo-c-flip-cover" style="background-image:url(<mt:AssetThumbnailURL width="1200" />)"></div>
            </mt:CustomFieldAsset>
        <mt:Else>
            <div class="echo-c-flip-cover" style="background-image:url(/images/common/noimage_large.jpg)"></div>
        </mt:If>
        <div class="echo-c-flip-container">
            <div class="echo-c-flip-contents">
                <div class="echo-c-flip-contents-inner">

                    <<mt:Var name="__page_tagname__" /> class="echo-c-flip-title echo-m-title echo-u-font-first">
                    <mt:If tag="CustomFieldValue" identifier="EchoPageNavLabel">
                        <mt:CustomFieldValue identifier="EchoPageNavLabel" />
                    <mt:Else>
                        <mt:If tag="PageBasename" eq="index">
                            <mt:PageFolder>
                            <mt:FolderLabel encode_html="1" />
                            </mt:PageFolder>
                        <mt:Else>
                            <mt:PageTitle encode_html="1" />
                        </mt:If>
                    </mt:If>
                    </<mt:Var name="__page_tagname__" />>

                    <mt:If tag="CustomFieldValue" identifier="EchoPageSummary">
                    <div class="echo-c-flip-body"><mt:CustomFieldValue identifier="EchoPageSummary" /></div>
                    </mt:If>
                    <mt:If name="__page_class__" like="inverse">
                    <p class="echo-c-flip-link">
                        <a href="<mt:PagePermalink />" class="echo-m-btn echo-m-btn-inverse echo-m-btn-bordered echo-m-btn-block echo-m-btn-arrowed-right">詳しくはこちら</a>
                    </p>
                    <mt:Else>
                    <p class="echo-c-flip-link">
                        <a href="<mt:PagePermalink />" class="echo-m-btn echo-m-btn-gray echo-m-btn-bordered echo-m-btn-block echo-m-btn-arrowed-right">詳しくはこちら</a>
                    </p>
                    </mt:If>
                </div><!-- /.echo-c-flip-contents-inner -->
            </div><!-- /.echo-c-flip-contents -->
        </div><!-- /.echo-c-flip-container -->
    </div><!-- /.echo-c-flip -->
<mt:PagesFooter>
</section><!-- /.echo-mt-be-flip -->
</mt:PagesFooter>
</mt:Pages>
