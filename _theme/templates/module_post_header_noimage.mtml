<mt:Ignore>
# =======================
# 
# モジュール-記事ヘッダ-画像なし
# 
# =======================
</mt:Ignore>
<div class="echo-post-header">
    <h1 class="echo-post-title echo-title echo-title-style-a echo-title-level-3">
        <mt:EntryTitle encode_html="1" />
    </h1>

    <div class="echo-post-meta">
        <mt:If name="__category_basename__">
        <p class="echo-post-category">
            <a href="<mt:Var name="__category_url__" />" class="echo-post-category-label echo-post-category-label-primary echo-label echo-label-style-a"><mt:Var name="__category_label__" /></a>
        </p>
        </mt:If>

        <time class="echo-post-date" datetime="<mt:EntryDate format_name="iso8601" />"><mt:EntryDate language="en" format="$__blog_entry_date__" /></time>
    </div><!-- /.echo-post-meta -->
</div><!-- /.echo-post-header -->
